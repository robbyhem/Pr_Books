@model Book

<div class="shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="column-12 text-center">
                <h2 class="text-white py-2">Edit Book</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            @*<input asp-for="Id" hidden />*@
            <div class="border p-3 mt-4">

                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2">Book Title</label>
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <!--<input type="type" name="name" value="" />-->
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2">Author</label>
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2">Description</label>
                    <textarea asp-for="Description" class="form-control border-0 shadow" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2">List Price</label>
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2">Price for 1-50</label>
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2">Price for 50-100</label>
                    <input asp-for="Price50" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2">Price for 100+</label>
                    <input asp-for="Price100" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
